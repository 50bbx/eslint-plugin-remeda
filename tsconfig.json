{
  "exclude": ["node_modules", "dist", "coverage", ".nyc_output"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "esModuleInterop": true,
    "lib": ["es2020"],
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "module": "nodenext",
    "skipLibCheck": true,
    "target": "es2020",
    "strict": true,
    "noImplicitAny": false
  }
}
